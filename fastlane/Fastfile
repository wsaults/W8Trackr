# frozen_string_literal: true

default_platform(:ios)

platform :ios do
  desc "Run unit tests"
  lane :test do
    run_tests(
      project: "W8Trackr.xcodeproj",
      scheme: "W8Trackr",
      device: "iPhone 16 Pro Max",
      clean: true
    )
  end

  desc "Build the app"
  lane :build do
    build_app(
      project: "W8Trackr.xcodeproj",
      scheme: "W8Trackr",
      export_method: "app-store",
      skip_codesigning: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number(
      xcodeproj: "W8Trackr.xcodeproj"
    )
    build_app(
      project: "W8Trackr.xcodeproj",
      scheme: "W8Trackr",
      configuration: "Release",
      export_method: "app-store",
      clean: true
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Submit to App Store (metadata and screenshots only)"
  desc "Assumes binary already uploaded via beta lane"
  lane :release do |options|
    submit_for_review = options[:submit] || false

    deliver(
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: false,
      force: true,
      submit_for_review: submit_for_review,
      automatic_release: false,
      phased_release: true,
      submission_information: {
        add_id_info_uses_idfa: false
      }
    )

    if submit_for_review
      UI.success("App submitted for review with manual release enabled")
    else
      UI.success("Metadata and screenshots uploaded. Run with submit:true to submit for review.")
    end
  end

  desc "Submit to App Store and request review"
  lane :submit do
    release(submit: true)
  end

  # ──────────────────────────────────────────────────────────
  # Screenshot Lanes
  # ──────────────────────────────────────────────────────────

  desc "Capture App Store screenshots using snapshot"
  lane :screenshots do
    capture_screenshots(
      project: "W8Trackr.xcodeproj",
      scheme: "W8Trackr",
      output_directory: "./fastlane/screenshots",
      clear_previous_screenshots: true,
      devices: [
        "iPhone 17 Pro Max",
        "iPhone Air",
        "iPad Pro 13-inch (M5)"
      ],
      languages: ["en-US"]
    )
  end

  desc "Add device frames to screenshots using frameit"
  lane :frames do
    frame_screenshots(
      path: "./fastlane/screenshots"
    )
  end

  desc "Capture screenshots and add device frames"
  lane :screenshots_framed do
    screenshots
    frames
  end
end
