# App identifier (bundle ID)
app_identifier("com.saults.W8Trackr")

# Apple Developer Portal Team ID
team_id("77QB78PHPH")

# App Store Connect Team ID (same as Developer Portal for individual accounts)
itc_team_id("77QB78PHPH")

# App Store Connect API Key for authentication
# See fastlane/api_key.json.example for setup instructions
api_key_path = ENV["API_KEY_PATH"] || "fastlane/api_key.json"
if File.exist?(api_key_path)
  require 'json'
  api_key_data = JSON.parse(File.read(api_key_path))
  app_store_connect_api_key(
    key_id: api_key_data["key_id"],
    issuer_id: api_key_data["issuer_id"],
    key_content: api_key_data["key"],
    in_house: api_key_data["in_house"] || false
  )
end

# For more information about the Appfile, see:
# https://docs.fastlane.tools/advanced/#appfile
